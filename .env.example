# Backend Environment Variables
PORT=5000
NODE_ENV=development

# Firestore is used as the database (configured via Firebase Admin SDK below)

# JWT Configuration (still used for backward compatibility)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Client URL
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:5000

# Firebase Admin SDK Configuration
# Generate service account key from Firebase Console > Project Settings > Service Accounts
# Convert the JSON to a single line string and paste here
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Flutterwave Configuration
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_SECRET_HASH=your_flutterwave_secret_hash

# Payfast Configuration
PAYFAST_MERCHANT_ID=your_payfast_merchant_id
PAYFAST_MERCHANT_KEY=your_payfast_merchant_key
PAYFAST_PASSPHRASE=your_payfast_passphrase
PAYFAST_TEST_MODE=true

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
ADMIN_EMAIL=admin@quicksell.com

# Frontend Environment Variables (create .env in frontend folder)
# VITE_API_URL=http://localhost:5000/api
# VITE_SOCKET_URL=http://localhost:5000

# Firebase Client Configuration
# VITE_FIREBASE_API_KEY=your_firebase_api_key
# VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
# VITE_FIREBASE_APP_ID=your_firebase_app_id
# VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id