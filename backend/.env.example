# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Secret (Change this in production!)
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Client URLs
CLIENT_URL=https://quicksell-80aad.web.app
SERVER_URL=https://your-backend-url.com
FRONTEND_URL=https://quicksell-80aad.web.app

# Firebase Admin SDK Configuration
# Get this from Firebase Console > Project Settings > Service Accounts
FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Payment Gateways - Flutterwave
FLUTTERWAVE_PUBLIC_KEY=your_public_key
FLUTTERWAVE_SECRET_KEY=your_secret_key
FLUTTERWAVE_ENCRYPTION_KEY=your_encryption_key
FLUTTERWAVE_MERCHANT_ID=your_merchant_id
FLUTTERWAVE_TEST_MODE=false

# PayFast Payment Gateway
PAYFAST_MERCHANT_ID=your_merchant_id
PAYFAST_MERCHANT_KEY=your_merchant_key
PAYFAST_PASSPHRASE=your_passphrase
PAYFAST_TEST_MODE=false
PAYFAST_USE_SANDBOX=false

# Email Configuration (Brevo/SendinBlue)
BREVO_API_KEY=your_api_key
BREVO_SENDER_EMAIL=your_email@domain.com
BREVO_SENDER_NAME=Your_Company_Name
BREVO_SMTP_LOGIN=your_smtp_login
BREVO_SMTP_PASSWORD=your_smtp_password

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
TEST_EMAIL=test@yourdomain.com